@model DoAn.Areas.Admin.Models.DienThoaiModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DienThoaiModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="MaDongDT" class="control-label"></label>
                <input asp-for="MaDongDT" class="form-control" />
                <span asp-validation-for="MaDongDT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaLoai" class="control-label"></label>
                <input asp-for="MaLoai" class="form-control" />
                <span asp-validation-for="MaLoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenDongDT" class="control-label"></label>
                <input asp-for="TenDongDT" class="form-control" />
                <span asp-validation-for="TenDongDT" class="text-danger"></span>
            </div>
            <div class="custom-file">
                <input accept="*.png|*.jpeg|*.jpg" type="file" class="custom-file-input" id="ful" name="ful" />
                <label class="custom-file-label" for="ful">Chon Hinh</label>
            </div>
            <div class="form-group">
                <img id="ImgPre" src="~/img/noimg.jpg" alt="noimage" class="img-thumbnail" />
            </div>
            <div class="form-group">
                <label asp-for="DonGia" class="control-label"></label>
                <input asp-for="DonGia" class="form-control" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaKM" class="control-label"></label>
                <input asp-for="GiaKM" class="form-control" />
                <span asp-validation-for="GiaKM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>

        function readURL(input, idImg) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $(idImg).attr("src", e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }

        }
        $("#ful").change(function () {
            readURL(this, "#ImgPre");
        });

    </script>
}
